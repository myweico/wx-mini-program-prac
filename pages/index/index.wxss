/*
* 轮播图区域
*/
.swiper-image {
  width: 100%;
  height: 360rpx;
}

/*
  导航区域
*/
.index-nav {
  display: flex;
  flex-wrap: wrap;
}
.nav-item {
  width: 33.3%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  font-size: 16px;
}
.nav-icon {
  width: 80rpx;
  height: 80rpx;
}
.border-right {
  position: relative;
}
.border-right::after {
  content: '';
  display: block;
  height: 100%;
  position: absolute;
  right: 0;
  border-right: 1rpx solid #eee; 
}

/*
*  链接区域
*/
.index-link {
  display: flex;
  padding: 20rpx 30rpx;
}
.link-item {
  width: 50%;
  display: flex;
  justify-content: center;
}
.index-link image {
  width: 320rpx;
}

